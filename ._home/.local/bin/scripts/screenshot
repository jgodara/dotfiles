#!/bin/bash

inp=$(echo -e "Complete\nArea\nComplete, Delayed\nArea, Delayed" | dmenu -i)

case $inp in
	"Complete") scrot -e '~/.local/bin/scripts/after_screenshot $f' ;;
	"Area") scrot -e '~/.local/bin/scripts/after_screenshot $f' -s ;;
	"Complete, Delayed") scrot -e '~/.local/bin/scripts/after_screenshot $f' -c -d 2 ;;
	"Area, Delayed") scrot -e '~/.local/bin/scripts/after_screenshot $f' -c -d -2 -s ;;
esac
